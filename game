#!/usr/bin/env ruby
require_relative 'lib/options'
require_relative 'lib/environment'
require_relative 'models/game'

command = ARGV[0]
options = Options.parse

name = ARGV[1]
case command
when "add"
  puts "Successfully added game." if Game.create(options.merge(name: name))
when "remove"
  puts "Successfully removed game." if Game.find_by_name(name).remove_from_collection
when "update"
  puts "Successfully update game." if Game.find_by_name(name).update_attributes(options)
end
